{
	"name": "cf-next-starter",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"cf:dev": "npm run cf:build && npx wrangler dev",
		"cf:build": "opennextjs-cloudflare build",
		"predeploy": "drizzle-kit migrate",
		"deploy": "wrangler deploy",
		"prepreview": "drizzle-kit migrate",
		"preview": "wrangler versions upload --env preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=reports/vitest-junit.xml"
	},
	"dependencies": {
		"@opennextjs/cloudflare": "^1.3.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"lucide-react": "^0.474.0",
		"markdown-to-jsx": "^7.7.13",
		"next": "15.4.6",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"tailwind-merge": "^2.5.5"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/eslintrc": "^3",
		"@storybook/addon-a11y": "^9.1.10",
		"@storybook/addon-docs": "^9.1.10",
		"@storybook/addon-onboarding": "^9.1.10",
		"@storybook/addon-vitest": "^9.1.10",
		"@storybook/nextjs-vite": "^9.1.10",
		"@tailwindcss/postcss": "^4",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20.19.19",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"eslint-plugin-storybook": "^9.1.10",
		"jsdom": "^27.0.0",
		"playwright": "^1.55.1",
		"storybook": "^9.1.10",
		"drizzle-kit": "^0.31.5",
		"tsx": "^4.19.2",
		"tailwindcss": "^4",
		"typescript": "^5",
		"vitest": "^3.2.4",
		"wrangler": "^4.42.0"
	}
}
