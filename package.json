{
  "name": "cf-next-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "cf:dev": "npm run cf:build && npx wrangler dev",
    "cf:build": "opennextjs-cloudflare build",
    "deploy": "wrangler deploy",
    "preview": "wrangler versions upload --env preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "auth:generate": "npx @better-auth/cli@latest generate --config ./scripts/auth.schema.ts --output ./src/db/auth-schema.ts --yes",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "npm-run-all --parallel test:ci:vitest test:ci:playwright",
    "test:ci:vitest": "vitest run --coverage --reporter=default --reporter=junit --outputFile=reports/vitest-junit.xml",
    "pretest:ci:playwright": "node -e \"require('fs').mkdirSync('reports/playwright', { recursive: true });\"",
    "test:ci:playwright": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=reports/playwright/results.xml playwright test",
    "test:playwright": "playwright test",
    "prepare": "lefthook install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commit": "cz"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@opennextjs/cloudflare": "^1.3.0",
    "@react-email/components": "^0.5.6",
    "@react-email/render": "^1.3.2",
    "@sentry/cloudflare": "^10.18.0",
    "@sentry/nextjs": "^10.17.0",
    "@sentry/replay": "^7.116.0",
    "better-auth": "^1.3.26",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "lucide-react": "^0.474.0",
    "markdown-to-jsx": "^7.7.13",
    "next": "15.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^6.1.2",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/nextjs-vite": "^9.1.10",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.19",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-storybook": "^9.1.10",
    "jsdom": "^27.0.0",
    "lefthook": "^1.13.6",
    "lint-staged": "^16.2.3",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "storybook": "^9.1.10",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx,jsx,json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,cjs,mjs,ts,tsx,jsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
